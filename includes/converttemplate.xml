<?xml version="1.0" encoding="UTF-8"?>
<project name="ConvertTemplate" default="convert-template">
	<!-- fail on empty properties -->
    <if>
        <equals arg1="${final-gene.template.path}" arg2="" />
        <then><fail message="Property 'final-gene.template.path' is empty" /></then>
    </if>

    <target name="convert-template" description="Create settings from template files">
	
		<echo msg="Copy templates from '${project.basedir}/${final-gene.template.path}' to '${project.basedir}/${final-gene.project.path}'" />

        <copy todir="${final-gene.project.path}" overwrite="true">
            <filterchain>
                <expandproperties />
            </filterchain>
            <fileset dir="${final-gene.template.path}" >
				<include name="**/*.template"/>
            </fileset>
            <mapper type="glob" from="*.template" to="*" />
        </copy>	
		
    </target>
	
</project>
